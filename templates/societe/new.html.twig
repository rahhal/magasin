
{% extends 'base.html.twig' %}

{% block title %}New Societe{% endblock %}

{% block body %}
    {#<div class="layout-boxed navbar-top">#}
        {% include('layout/navbar.html.twig') %}
        <!-- Page container -->
        <div class="page-container">

            <!-- Page content -->
            <div class="page-content">
                <!-- Main content -->
                <div class="content-wrapper">
                    <!-- Page header -->
                    <div class="page-header page-header-default">
                        <div class="page-header-content">
                            <div class="page-title">

                            </div>
                        </div>

                        <div class="breadcrumb-line">
                            <ul class="breadcrumb">
                                <li><a href="#"><i class="icon-home2 position-left"></i> الملف</a></li>
                                <li class="active">{{ "Societe"|trans }}</li>
                            </ul>

                        </div>
                    </div>
                    <!-- /page header -->
                    <!-- Content area -->
                    <div class="col-md-12">
                        <div class="panel">
                            <div class="col-md-12">

                                <!-- Basic layout-->
                                <div class="panel panel-flat">
                                    <div class="panel-heading">
                                        <h1 class="panel-title">{{ "Create new Societe"|trans }}</h1>
                                        <div class="heading-elements">
                                            <ul class="icons-list">
                                                <li><a data-action="collapse"></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <hr>

                                    {#<div class="panel-body">

                                        {{ include('societe/_form.html.twig', {'button_label': 'Save'}) }}
                                        <div class="text-right">

                                            <a href="{{ path('societe_show') }}" class="btn btn-default text-right">
                                            <i class="glyphicon  glyphicon-arrow-right " style="margin-left: 1rem"></i>back to list</a>
                                         </div>
                                    </div>#}
                                    <div class="panel-body">
                                        {{ form_start(form, {'attr': {'class': 'form-horizontal form-label-left'}}) }}
                                        <div class="form-group">
                                            <label class="col-lg-3 control-label">{{ "Ministere"|trans }}</label>
                                            <div class="col-lg-6">
                                                {{ form_widget(form.ministere,{'attr': {'class':'form-control col-lg-6'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-3 control-label">{{ "Siege"|trans }}</label>
                                            <div class="col-lg-6">
                                                {{ form_widget(form.siege,{'attr': {'class':'form-control col-lg-6'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-3 control-label">{{ "Nom soc"|trans }}</label>
                                            <div class="col-lg-6">
                                                {{ form_widget(form.Nom_soc,{'attr': {'class':'form-control col-lg-6'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-3 control-label">{{ "Directeur"|trans }}</label>
                                            <div class="col-lg-6">
                                                {{ form_widget(form.directeur,{'attr': {'class':'form-control col-lg-6'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-3 control-label">{{ "Magasinier"|trans }}</label>
                                            <div class="col-lg-6">
                                                {{ form_widget(form.magasinier,{'attr': {'class':'form-control col-lg-6'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-3 control-label">{{ "Adresse"|trans }}</label>
                                            <div class="col-lg-6">
                                                {{ form_widget(form.adresse,{'attr': {'class':'form-control col-lg-6'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-3 control-label">{{ "Ville"|trans }}</label>
                                            <div class="col-lg-6">
                                                {{ form_widget(form.ville,{'attr': {'class':'form-control col-lg-6'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-3 control-label">{{ "Tel"|trans }}</label>
                                            <div class="col-lg-6">
                                                {{ form_widget(form.tel,{'attr': {'class':'form-control col-lg-6'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-3 control-label">{{ "Fax"|trans }}</label>
                                            <div class="col-lg-6">
                                                {{ form_widget(form.fax,{'attr': {'class':'form-control col-lg-6'} }) }}
                                            </div>
                                        </div>


                                        <hr>
                                        <div class="form-group text-right" >
                                            {{ include('societe/_form.html.twig') }}

                                            {#<a href="{{ path('societe_show') }}" class="btn btn-default text-right">
                                                <i class="glyphicon  glyphicon-arrow-right " style="margin-left: 1rem"></i>{{ "back to list"|trans }}</a>
#}
                                        </div>
                                        {{ form_end(form) }}

                                    </div>
                                </div>
                                <!-- /basic layout -->

                            </div>
                        </div>
                    </div>
                    <!-- /content area -->
                </div>
                <!-- /main content -->

            </div>
            <!-- /page content -->
            {% include('layout/footer.html.twig') %}
        </div>
        <!-- /page container -->
    {#</div>#}


{% endblock %}
