

{% extends 'base.html.twig' %}

{# {% block title %} {{ app.user.email|upper }} {% endblock %} #}
{% block body_class %} class="nav-md" {% endblock %}
{% block body %}
    {#<div class="layout-boxed navbar-top">#}
        {% include('layout/navbar.html.twig') %}
        <!-- Page container -->
        <div class="page-container">

            <!-- Page content -->
            <div class="page-content">
                <!-- Main content -->
                <div class="content-wrapper">
                    <!-- Page header -->
                    <div class="page-header page-header-default">
                        <div class="page-header-content">
                            <div class="page-title">

                            </div>
                        </div>

                        <div class="breadcrumb-line">
                            <ul class="breadcrumb">
                                <li><a href="#"><i class="icon-home2 position-left"></i> الملف</a></li>
                                <li class="active">الوظائف</li>
                            </ul>

                        </div>
                    </div>
                        <!-- /page header -->
                        <!-- Content area -->
                        <div class="col-md-12">
                            <div class="panel">
                                <div class="col-md-12">

                                    <!-- Basic layout-->
                                    <div class="panel panel-flat">
                                        <div class="panel-heading">
                                            <h1 class="panel-title">{{ "Info Fonction"|trans }}</h1>
                                            <div class="heading-elements">
                                                <ul class="icons-list">
                                                    <li><a data-action="collapse"></a></li>
                                                </ul>
                                            </div>
                                            {% include('layout/flash-messages.html.twig') %}
                                        </div>
                                        <hr>

                                        <div class="panel-body">
                                            {{ form_start(form, {'attr': {'class': 'form-horizontal form-label-left'}}) }}
                                            <div class="form-group">
                                                <label class="col-lg-3 control-label">{{ "Fonction"|trans }}</label>
                                                <div class="col-lg-6">
                                                    {{ form_widget(form.fonction,{'attr': {'class':'form-control col-lg-6'} }) }}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-lg-3 control-label">{{ "Remarque"|trans }}</label>
                                                <div class="col-lg-6">
                                                    {{ form_widget(form.remarque,{'attr': {'class':'form-control col-lg-6'} }) }}
                                                </div>
                                            </div>

                                            <hr>
                                            <div class="form-group">
                                                {{ include('fonction/_form.html.twig') }}
                                            </div>
                                            {{ form_end(form) }}

                                        </div>
                                    </div>
                                    <!-- /basic layout -->

                                </div>

                                <div class="col-md-12">
                                    <div class="panel">
                                        <div class="title">
                                            <h1> &nbsp;{{ "Fonction index"|trans }}&nbsp;&nbsp; </h1>
                                            <hr>
                                        </div>
                                        <div class="content">
                                            <div class="row">
                                                {#<form id="f" method="get" >
                                                <table class="table table-bordered" id="t">#}
                                                <table class="table table-bordered">
                                                    <thead>
                                                    <tr class="bg-orange-800">
                                                        <th>{{ "Fonction"|trans }}</th>
                                                        <th>{{ "Remarque"|trans }}</th>
                                                        <th class="text-right">
                                                            <a href="{{ path('fonction_new') }}" class="btn btn-success btn-rounded">
                                                                <i class="glyphicon  glyphicon-plus" style="margin-left: 1rem"></i>{{ "Create new fonction"|trans }} </a>

                                                            {#<input id="Sup" type="submit" value="Supprimer" />#}

                                                        </th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% for fonction in fonctions %}
                                                        <tr>
                                                           {# <td><input id="d" type="text" />{{ fonction.fonction }}</td>
                                                            <td><input id="p" type="text" />{{ fonction.remarque }}</td>#}
                                                            <td>{{ fonction.fonction }}</td>
                                                            <td>{{ fonction.remarque }}</td>
                                                            <td>
                                                                <a href="{{ path('fonction_edit', {'id': fonction.id}) }}" class="btn btn-primary btn-rounded"><i class="glyphicon  glyphicon-edit" style="margin-left: 1rem"></i>
                                                                    {{ "edit"|trans }}
                                                                </a>
                                                                <a href="{{ path('fonction_delete', {'id': fonction.id}) }}" class="btn btn-danger btn-rounded"><i class="glyphicon  glyphicon-trash" style="margin-left: 1rem"></i>
                                                                    {{ "Delete"|trans }}

                                                                {#<button id="add">Ajouter</button>#}
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    {% else %}
                                                        <tr class="text-center">
                                                            <td colspan="3">{{ "no records found"|trans }}</td>
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                </table>
                                                {#</form>#}
                                                <br>
                                                <div class="text-right" >
                                                    {{ knp_pagination_render(fonctions) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /content area -->
                    </div>
                    <!-- /main content -->

                </div>
                <!-- /page content -->
                {% include('layout/footer.html.twig') %}
            </div>
            <!-- /page container -->


{% endblock %}
