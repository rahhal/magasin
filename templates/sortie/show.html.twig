{% block body_class %} class="nav-md" {% endblock %}
{% block body %}

    {#<div class="layout-boxed navbar-top">#}
    {% include('layout/navbar.html.twig') %}
    <!-- Page container -->
    <div class="page-container">
        <!-- Page content -->
        <div class="page-content">
            <!-- Main content -->
            <div class="content-wrapper">
                <!-- Page header -->
                <div class="col-md-12">
                    <div class="page-header page-header-default">
                        <div class="page-header-content">
                            <div class="page-title">

                            </div>
                        </div>
                        <div class="breadcrumb-line">
                            <ul class="breadcrumb">
                                <li><a href="#"><i class="icon-home2 position-left"></i> المواد المستهلكة</a></li>
                                <li class="active">خروج البضاعة</li>
                            </ul>

                        </div>
                    </div>
                </div>
                <!-- /page header -->
                <!-- Content area -->
                <div class="col-md-12">
                    <div class="panel">
                        <div class="col-md-12">

                            <!-- Basic layout-->
                            <div class="panel panel-flat">
                                <div class="panel-heading">
                                    <h1 class="panel-title">{{ "New sortie"|trans }}</h1>
                                    <div class="heading-elements">
                                        <ul class="icons-list">
                                            <li><a data-action="collapse"></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <hr>

                                <div class="panel-body">
                                    <table class="table">
                                        <tbody>
                                        <tr>
                                            <th>{{ "Date"|trans }}</th>
                                            <td>{{ sortie.date ? sortie.date|date('Y-m-d') : '' }}</td>
                                        </tr>
                                        <tr>
                                            <th>{{ "Bon sortie"|trans }}</th>
                                            <td>{{ sortie.bonSortie }}</td>
                                        </tr>
                                        <tr>
                                            <th>{{ "Num"|trans }}</th>
                                            <td>{{ sortie.num }}</td>
                                        </tr>
                                        <tr>
                                            <th>{{ "Benificiaire"|trans }}</th>
                                            <td>{{ sortie.benificiaire }}</td>
                                        </tr>
                                        <tr>
                                            <th>{{ "Annee"|trans }}</th>
                                            <td>{{ sortie.annee }}</td>
                                        </tr>
                                        </tbody>
                                    </table>
                                    <hr>
                                    <div class="form-group">
                                        {#{{ include('entree/_form.html.twig') }}#}
                                        <div class="text-right">
                                            <a href="{{ path('sortie_new') }}" class="btn btn-default"><i class="glyphicon glyphicon-arrow-right" style="margin-left: 1rem"></i>{{ "back to list"|trans }}</button>
                                            </a>
                                        </div>
                                    </div>
                                    {#{{ form_end(form) }}#}

                                </div>
                            </div>
                            <!-- /basic layout -->
                        </div>
                        <div class="col-md-12">
                            <div class="panel">

                                <div class="content">
                                    <div class="row">

                                        <!-- Basic layout-->
                                        <div class="panel panel-flat">
                                            <div class="panel-heading">
                                                <h1 class="panel-title">{{ "Info sortie"|trans }}</h1>
                                                <div class="heading-elements">
                                                    <ul class="icons-list">
                                                        <li><a data-action="collapse"></a></li>
                                                    </ul>
                                                </div>
                                                {% include('layout/flash-messages.html.twig') %}

                                                {% for message in app.flashes('danger') %}
                                                    <div class="alert alert-danger" role="alert">
                                                        {{ message }}
                                                    </div>
                                                {% endfor %}

                                            </div>
                                            <hr>
                                            <div class="panel-body">
                                                <div class="col-md-6">
                                                    {{ form_start(form, {'attr': {'class': 'form-horizontal form-label-left'}}) }}
                                                    <div class="form-group">
                                                        <label class="col-lg-3 control-label">{{ "Article"|trans }}</label>
                                                        <div class="col-lg-6">
                                                            {{ form_widget(form.article,{'attr': {'class':'form-control col-lg-6'} }) }}
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-lg-3 control-label">{{ "Qte"|trans }}</label>
                                                        <div class="col-lg-6">
                                                            {{ form_widget(form.qte,{'attr': {'class':'form-control col-lg-6'} }) }}
                                                        </div>
                                                    </div>
                                                     <div class="form-group">
                                                         <label class="col-lg-3 control-label">{{ "Reference"|trans }}</label>
                                                         <div class="col-lg-6">
                                                             {{ form_widget(form.reference,{'attr': {'class':'form-control col-lg-6'} }) }}
                                                         </div>
                                                     </div>

                                                    <hr>
                                                    <div class="form-group">
                                                        {{ include('ligne_sortie/_form.html.twig') }}
                                                    </div>
                                                    {{ form_end(form) }}
                                                </div>

                                                <div class="col-md-6">
                                                    <table class="table table-bordered">
                                                        <thead>
                                                        <tr class="bg-orange-800">
                                                            <th>{{ "Article"|trans }}</th>
                                                            <th>{{ "Qte"|trans }}</th>
{#                                                            <th>{{ "Reference"|trans }}</th>#}
                                                            <th></th>
                                                            {# <th class="text-right">
                                                                 <a href="{{ path('entree_show',{'id': entree.id}) }}" class="btn btn-success btn-rounded">
                                                                     <i class="glyphicon  glyphicon-plus" style="margin-left: 1rem"></i>{{ "Create new Article"|trans }} </a>
                                                             </th>#}
                                                        </tr>
                                                        </thead>
                                                        <tbody>
                                                        {% for ligne_sortie in sortie.ligneSorties %}
                                                            <tr>
                                                                <td>{{ ligne_sortie.article }}</td>
                                                                <td>{{ ligne_sortie.qte }}</td>
{#                                                                <td>{{ ligne_sortie.reference }}</td>#}
                                                                <td>
                                                                    {# <a href="{{ path('entree_show', {'id': entree.id}) }}" class="btn btn-default btn-rounded"><i class="glyphicon  glyphicon-search"></i>
                                                                         {{ "show"|trans }}
                                                                     </a>#}
                                                                    <a href="{{ path('ligne_sortie_edit', {'id': ligne_sortie.id}) }}" class="btn btn-primary btn-rounded"><i class="glyphicon  glyphicon-edit" style="margin-left: 1rem"></i>
                                                                        {{ "edit"|trans }}
                                                                    </a>
                                                                    {# <a href="{{ path('entree_show', {'id': entree.id}) }}" class="btn btn-primary btn-rounded"><i class="glyphicon  glyphicon-edit" style="margin-left: 1rem"></i>
                                                                         {{ "edit"|trans }}
                                                                     </a>#}
                                                                    <a href="{{ path('ligne_sortie_delete', {'id': ligne_sortie.id}) }}" class="btn btn-danger btn-rounded"><i class="glyphicon  glyphicon-trash" style="margin-left: 1rem"></i>
                                                                        {{ "Delete"|trans }}
                                                                    </a>
                                                                </td>
                                                            </tr>

                                                        {% else %}
                                                            <tr class="text-center">
                                                                <td colspan="7">{{ "no records found"|trans }}</td>
                                                            </tr>
                                                        {% endfor %}
                                                        </tbody>
                                                    </table>

                                                </div>
                                            </div>
                                        </div>
                                        <!-- /Basic layout-->
                                    </div>
                                </div>
                            </div>
                            <!-- /content area -->
                        </div>
                        <!-- /main content -->

                    </div>
                    <!-- /page content -->
                    {% include('layout/footer.html.twig') %}
                </div>
                <!-- /page container -->
            </div>
        </div>
    </div>
{% endblock %}